<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Score">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorWhite"
        android:elevation="@dimen/toolbar_elevation"
        android:layout_alignParentTop="true"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/toolbar"
        android:layout_above="@id/viewBottom"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/toolbar"
            android:layout_above="@+id/viewBottom"
            android:padding="@dimen/_10sdp"
            android:orientation="vertical">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp"
                    android:gravity="center">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="You Scored"
                        android:gravity="center"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorSecondary"
                        android:fontFamily="@font/regular"/>

                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/height_btn"
                        android:backgroundTint="@color/colorSecondary"
                        android:layout_margin="@dimen/_4sdp"
                        app:cardCornerRadius="@dimen/card_corner_radius">

                        <TextView
                            android:id="@+id/txtScore"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:text="0/0"
                            android:gravity="center"
                            android:textSize="@dimen/text_size_heading"
                            android:textColor="@color/colorWhite"
                            android:fontFamily="@font/bold"
                            android:layout_marginHorizontal="@dimen/_14sdp"
                            android:layout_marginVertical="@dimen/_10sdp"/>

                    </androidx.cardview.widget.CardView>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_10sdp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Time Taken"
                            android:gravity="start"
                            android:textSize="@dimen/text_size"
                            android:textColor="@color/colorGreyDark"
                            android:fontFamily="@font/regular"
                            android:layout_gravity="start"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/txtTimeTaken"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="7 mins"
                            android:gravity="end"
                            android:textSize="@dimen/text_size"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/bold"
                            android:layout_gravity="end"
                            android:layout_weight="1"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_10sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Questions"
                            android:gravity="start"
                            android:textSize="@dimen/text_size"
                            android:textColor="@color/colorGreyDark"
                            android:fontFamily="@font/regular"
                            android:layout_gravity="start"
                            android:layout_weight="1"/>

                        <TextView
                            android:id="@+id/txtTotalQuestions"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="2"
                            android:gravity="end"
                            android:textSize="@dimen/text_size"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/bold"
                            android:layout_gravity="end"
                            android:layout_weight="1"/>

                    </LinearLayout>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:id="@+id/linearCards"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_140sdp"
                    android:backgroundTint="@color/colorWhite"
                    android:layout_margin="@dimen/_4sdp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:src="@drawable/ic_tick"
                            android:padding="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            app:tint="@color/colorGreen" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Correct"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/colorGreyDark"
                            android:fontFamily="@font/regular"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/txtCorrect"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="10"
                            android:textSize="@dimen/text_size_heading"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/bold"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_140sdp"
                    android:backgroundTint="@color/colorWhite"
                    android:layout_margin="@dimen/_4sdp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:src="@drawable/ic_cross"
                            android:padding="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            app:tint="@color/colorRed" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Incorrect"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/colorGreyDark"
                            android:fontFamily="@font/regular"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/txtWrong"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="77"
                            android:textSize="@dimen/text_size_heading"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/bold"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_140sdp"
                    android:backgroundTint="@color/colorWhite"
                    android:layout_margin="@dimen/_4sdp"
                    android:layout_weight="1"
                    app:cardCornerRadius="@dimen/card_corner_radius"
                    app:cardElevation="0dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:src="@drawable/ic_question_mark"
                            android:padding="@dimen/_10sdp"
                            android:layout_weight="1"
                            android:layout_gravity="center"
                            app:tint="@color/colorGreyDark" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Unattempted"
                            android:textSize="@dimen/text_size_small"
                            android:textColor="@color/colorGreyDark"
                            android:fontFamily="@font/regular"
                            android:layout_gravity="center"/>

                        <TextView
                            android:id="@+id/txtUnattempted"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="25"
                            android:textSize="@dimen/text_size_heading"
                            android:textColor="@color/colorBlack"
                            android:fontFamily="@font/bold"
                            android:layout_gravity="center"/>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardShowRank"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginVertical="@dimen/_8sdp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Your Rank on Leaderboard"
                        android:gravity="start"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorGreyDark"
                        android:fontFamily="@font/regular"
                        android:layout_gravity="start"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_leaderboard"
                        android:padding="@dimen/_4sdp"
                        android:layout_gravity="center"
                        app:tint="@color/colorSecondary"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/cardShareScore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_2sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Share your performance"
                        android:gravity="start"
                        android:textSize="@dimen/text_size"
                        android:textColor="@color/colorGreyDark"
                        android:fontFamily="@font/regular"
                        android:layout_gravity="start"
                        android:layout_weight="1"/>

                    <ImageView
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ic_share"
                        android:padding="@dimen/_4sdp"
                        android:layout_gravity="center"
                        app:tint="@color/colorSecondary"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </ScrollView>

    <View
        android:id="@+id/viewBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorSecondary"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_above="@+id/linearBottom"/>

    <LinearLayout
        android:id="@+id/linearBottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_alignParentBottom="true">

        <TextView
            android:id="@+id/txtViewAnswers"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="VIEW ANSWERS"
            android:textSize="@dimen/text_size"
            android:textColor="@color/colorSecondary"
            android:gravity="center"
            android:fontFamily="@font/regular"
            android:paddingVertical="@dimen/_10sdp"
            android:layout_weight="1"/>

        <View
            android:layout_width="@dimen/_1sdp"
            android:layout_height="match_parent"
            android:background="@color/colorSecondary"
            android:layout_above="@+id/linearBottom"/>

        <TextView
            android:id="@+id/txtHome"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="HOME"
            android:textSize="@dimen/text_size"
            android:textColor="@color/colorSecondary"
            android:gravity="center"
            android:fontFamily="@font/regular"
            android:paddingVertical="@dimen/_10sdp"
            android:layout_weight="1" />

    </LinearLayout>

</RelativeLayout>