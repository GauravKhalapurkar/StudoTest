<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/_10sdp"
    tools:context=".activities.StartTest">

    <ImageView
        android:id="@+id/imgBack"
        android:layout_width="@dimen/_25sdp"
        android:layout_height="@dimen/_25sdp"
        android:src="@drawable/ic_left"
        android:layout_gravity="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_above="@id/linearCards"
        android:orientation="vertical"
        android:gravity="center">

        <TextView
            android:id="@+id/txtCategoryName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Category Name"
            android:textSize="@dimen/text_size_heading"
            android:textColor="@color/colorSecondary"
            android:fontFamily="@font/semibolditalic"/>

        <TextView
            android:id="@+id/txtTestTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Test Title"
            android:textSize="@dimen/text_size"
            android:textColor="@color/colorGreyDark"
            android:fontFamily="@font/regular"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearCards"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerInParent="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                android:backgroundTint="@color/colorWhite"
                android:layout_margin="@dimen/_4sdp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/test_series"
                        android:padding="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Questions"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/colorGreyDark"
                        android:fontFamily="@font/regular"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/txtQuestions"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="@dimen/text_size_heading"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/bold"
                        android:layout_gravity="center"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                android:backgroundTint="@color/colorWhite"
                android:layout_margin="@dimen/_4sdp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/test_series"
                        android:padding="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Best Score"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/colorGreyDark"
                        android:fontFamily="@font/regular"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/txtBestScore"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="@dimen/text_size_heading"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/bold"
                        android:layout_gravity="center"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                android:backgroundTint="@color/colorWhite"
                android:layout_margin="@dimen/_4sdp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/test_series"
                        android:padding="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layout_gravity="center"/>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Time"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/colorGreyDark"
                        android:fontFamily="@font/regular"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/txtTime"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="@dimen/text_size_heading"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/bold"
                        android:layout_gravity="center"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                android:backgroundTint="@color/colorWhite"
                android:layout_margin="@dimen/_4sdp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_tick"
                        android:padding="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        app:tint="@color/colorGreen" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Positive Marks"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/colorGreyDark"
                        android:fontFamily="@font/regular"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/txtPositiveMarks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="@dimen/text_size_heading"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/bold"
                        android:layout_gravity="center"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                android:backgroundTint="@color/colorWhite"
                android:layout_margin="@dimen/_4sdp"
                android:layout_weight="1"
                app:cardCornerRadius="@dimen/card_corner_radius"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:src="@drawable/ic_cross"
                        android:padding="@dimen/_10sdp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        app:tint="@color/colorRed" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Negative Marks"
                        android:textSize="@dimen/text_size_small"
                        android:textColor="@color/colorGreyDark"
                        android:fontFamily="@font/regular"
                        android:layout_gravity="center"/>

                    <TextView
                        android:id="@+id/txtNegativeMarks"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="-"
                        android:textSize="@dimen/text_size_heading"
                        android:textColor="@color/colorBlack"
                        android:fontFamily="@font/bold"
                        android:layout_gravity="center"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_below="@id/linearCards"
        android:gravity="center">

        <Button
            android:id="@+id/btnStartTest"
            android:layout_width="match_parent"
            android:layout_height="@dimen/height_btn"
            android:text="Start Test"
            android:textSize="@dimen/text_size_btn"
            android:background="@drawable/custom_button"
            android:textColor="@color/colorWhite"
            android:layout_marginTop="@dimen/_14sdp"
            android:fontFamily="@font/regular"/>

    </LinearLayout>

</RelativeLayout>