<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Question">

    <LinearLayout
        android:id="@+id/linearTop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:padding="@dimen/_4sdp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/txtQuestionId"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_size"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center_horizontal"
            android:paddingVertical="@dimen/_5sdp"
            android:fontFamily="@font/regular"
            android:layout_weight="1"/>

        <TextView
            android:id="@+id/txtTimer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="00:00"
            android:gravity="center_horizontal"
            android:paddingVertical="@dimen/_5sdp"
            android:textSize="@dimen/text_size"
            android:textColor="@color/colorSecondary"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/regular"
            android:layout_weight="1" />

        <TextView
            android:id="@+id/txtSubmit"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Submit"
            android:background="@drawable/custom_edit_text"
            android:gravity="center_horizontal"
            android:paddingVertical="@dimen/_5sdp"
            android:textSize="@dimen/text_size"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/regular"
            android:layout_weight="1" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearBookmark"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/_4sdp"
        android:orientation="horizontal"
        android:layout_below="@+id/linearTop">

        <TextView
            android:id="@+id/txtCategoryName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="CAT NAME"
            android:ellipsize="marquee"
            android:singleLine="true"
            android:gravity="center_horizontal"
            android:textSize="@dimen/text_size"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center_horizontal"
            android:paddingVertical="@dimen/_5sdp"
            android:fontFamily="@font/regular"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/imgBookmark"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_bookmark"
            android:layout_weight="1"
            android:padding="@dimen/_4sdp"
            android:visibility="gone"/>

        <ImageView
            android:id="@+id/imgQuestionsListGrid"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/ic_apps"
            android:layout_weight="4"
            android:padding="@dimen/_4sdp"
            android:visibility="visible"/>

    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerQuestion"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/linearBookmark"
        android:layout_above="@+id/linearBottom"/>

    <RelativeLayout
        android:id="@+id/linearBottom"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_40sdp"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="@dimen/_4sdp"
        android:orientation="horizontal">

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:layout_alignParentStart="true"
            android:backgroundTint="@color/colorSecondary"
            app:cardCornerRadius="@dimen/_2sdp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/imgPrevQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_left"
                android:padding="@dimen/_4sdp"
                android:layout_gravity="center"
                app:tint="@color/colorWhite"/>

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/txtClearSelection"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:text="Clear Selection"
            android:background="@drawable/custom_edit_text"
            android:gravity="center_horizontal"
            android:paddingVertical="@dimen/_5sdp"
            android:textSize="@dimen/text_size"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/regular"
            android:layout_marginHorizontal="@dimen/_2sdp"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/txtMarkForReview"
            android:layout_width="@dimen/_120sdp"
            android:layout_height="wrap_content"
            android:text="Mark for Review"
            android:background="@drawable/custom_edit_text"
            android:gravity="center_horizontal"
            android:paddingVertical="@dimen/_5sdp"
            android:textSize="@dimen/text_size"
            android:textColor="@color/colorBlack"
            android:layout_gravity="center_horizontal"
            android:fontFamily="@font/regular"
            android:layout_marginHorizontal="@dimen/_2sdp"
            android:visibility="gone"/>

        <androidx.cardview.widget.CardView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="match_parent"
            android:layout_alignParentEnd="true"
            android:backgroundTint="@color/colorSecondary"
            app:cardCornerRadius="@dimen/_2sdp"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/imgNextQuestion"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_right"
                android:padding="@dimen/_4sdp"
                android:layout_gravity="center"
                app:tint="@color/colorWhite"/>

        </androidx.cardview.widget.CardView>

    </RelativeLayout>

</RelativeLayout>