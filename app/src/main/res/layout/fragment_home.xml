<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    tools:context=".fragments.Home">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/_178sdp">

        <androidx.viewpager.widget.ViewPager
            android:id="@+id/viewPagerIntro"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/one" />

        <com.tbuonomo.viewpagerdotsindicator.SpringDotsIndicator
            android:id="@+id/spring_dots_indicator"
            android:layout_width="wrap_content"
            android:layout_height="@dimen/_8sdp"
            android:layout_alignParentBottom="true"
            android:layout_centerHorizontal="true"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="@dimen/_4sdp"
            app:dampingRatio="0.5"
            app:dotsColor="@color/colorPrimary"
            app:dotsCornerRadius="@dimen/_25sdp"
            app:dotsSize="@dimen/_8sdp"
            app:dotsSpacing="@dimen/_4sdp"
            app:dotsStrokeColor="@color/colorGreyLight"
            app:dotsStrokeWidth="@dimen/_1sdp"
            app:progressMode="true"
            app:selectedDotColor="@color/colorGreyDark"
            app:stiffness="300" />

    </RelativeLayout>

<!--    <ImageView-->
<!--        android:layout_width="match_parent"-->
<!--        android:layout_height="@dimen/_180sdp"-->
<!--        android:src="@drawable/one"-->
<!--        android:scaleType="centerCrop"/>-->

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginVertical="@dimen/_10sdp">

        <androidx.cardview.widget.CardView
            android:id="@+id/cardFreeTest"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:backgroundTint="@color/colorWhite"
            android:layout_weight="1"
            android:layout_margin="@dimen/_4sdp"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/card_corner_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/free_tests"
                    android:layout_weight="1"
                    android:padding="@dimen/_4sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Free Tests"
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/colorBlack"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/regular" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

        <androidx.cardview.widget.CardView
            android:id="@+id/cardTestSeries"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_150sdp"
            android:backgroundTint="@color/colorWhite"
            android:layout_weight="1"
            android:layout_margin="@dimen/_4sdp"
            app:cardElevation="0dp"
            app:cardCornerRadius="@dimen/card_corner_radius">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:src="@drawable/test_series"
                    android:layout_weight="1"
                    android:padding="@dimen/_4sdp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Test Series"
                    android:textSize="@dimen/text_size"
                    android:textColor="@color/colorBlack"
                    android:layout_gravity="center_horizontal"
                    android:fontFamily="@font/regular" />

            </LinearLayout>

        </androidx.cardview.widget.CardView>

    </LinearLayout>

</LinearLayout>