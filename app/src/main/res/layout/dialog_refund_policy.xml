<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingHorizontal="@dimen/_10sdp"
    android:paddingVertical="@dimen/_20sdp"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imgClose"
        android:layout_width="@dimen/_24sdp"
        android:layout_height="@dimen/_24sdp"
        android:src="@drawable/ic_close"
        android:layout_gravity="end" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Refund Policy"
        android:layout_gravity="start"
        android:textSize="@dimen/text_size_heading"
        android:textColor="@color/colorSecondary"
        android:fontFamily="@font/semibolditalic"
        android:layout_marginTop="@dimen/_14sdp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="As a matter of policy, we do not offer any refund on any course/class/material. We recommend you check out Demo Tests on the App, free Tests in the course before purchasing any course."
                android:layout_gravity="start"
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/colorBlack"
                android:justificationMode="inter_word"
                android:fontFamily="@font/regular"
                android:layout_marginTop="@dimen/_10sdp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:text="We are not liable if you feel you do not like the course after purchasing. The refund would be processed only in those cases where payment has been made more than once for the same course. Refunds will be made directly to the original payment mode within seven working days of the finalization of the claim."
                android:textSize="@dimen/text_size_small"
                android:textColor="@color/colorBlack"
                android:justificationMode="inter_word"
                android:fontFamily="@font/regular"
                android:layout_marginTop="@dimen/_10sdp"/>

        </LinearLayout>

    </ScrollView>

</LinearLayout>